#!/bin/bash

set -e

# COLORS
OFF='\033[0m'
RED='\033[0;31m'
GREEN='\033[0;32m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'

# set the working directory to the root of the project
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && cd .. && pwd )"

if [[ "$os" == "mac" && "$CI" == "true" ]]; then
  echo "setting custom macos CRYSTAL_OPTS for CI"
  export CRYSTAL_OPTS="--link-flags=-Wl,-ld_classic"
fi

echo -e "ðŸ”¨ ${BLUE}building in ${PURPLE}release${BLUE} mode${OFF}"
SHARDS_CACHE_PATH="$DIR/.cache/shards" shards build --release --progress --debug --error-trace -Dpreview_mt
echo -e "ðŸ“¦ ${GREEN}build complete${OFF}"
